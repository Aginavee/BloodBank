@model IEnumerable<Bloodbankapp.Models.Register>
@{
    Layout = null;
}
<p style="font-size: 30px; text-align: left; background-image: url(/image/img8.jpg); height: 200px; background-repeat: no-repeat;
    background-size: cover;margin-top:10px;color:red; font-weight: bold;">
    Accessing page for Admin
</p>
    <div style="text-align:center;font-size:30px;">
        Create new user registration
        @Html.ActionLink("Create New", "Register", "Home")
    </div>
<style>
    .table {
        border: 3px dotted red;
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 80%;
        height: 250px;
        padding: 8px;
        margin-top: 40px;
        font-weight: bold;
        text-align: center;
        margin-left: 130px;
    }

    .btn-primary {
        border: 1px solid #ddd;
        padding: 8px;
    }

    .table th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: center;
        font-weight: bold;
        color: white;
        padding: 8px;
        background-color:red;
    }

    .dot {
        padding: 8px;
        color: darkred;
    }
</style>
<table class="table">
    <tr class="btn-primary">
        <th>
            @Html.DisplayNameFor(model => model.BankName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="btn-info">

            <td class="dot">
                @Html.DisplayFor(modelItem => item.BankName)
            </td>

            <td class="dot">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td class="dot">
                @Html.DisplayFor(modelItem => item.Mobile)
            </td>
            <td class="dot">
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td class="dot">
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td style="p-4;">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>

    }

</table>
<footer>
    <div class="foot-con d-flex flex-wrap justify-content-center" style="width: 100vw;margin-top:50px;">
        <div class="row clearfix p-lg-4 justify-content-around" style="background-color: black; color: whitesmoke; display: flex;gap:200px;">
            <div class="col-md-3 col-sm-12 col-xs-12 text-center wow bounceInLeft animated" style="visibility: visible; margin-bottom: 20px;">
                <h3 class="text-left">Looking for Blood</h3>
                <ul style="line-height: 165%">
                    <li>Blood Availability</li>
                    <li>Blood Bank Directory</li>
                    <li>Thalassemia Request</li>
                </ul>
                <img src="https://cdn-icons-png.flaticon.com/128/10892/10892869.png" />
            </div>
            <div class="col-md-3 col-sm-12 col-xs-12 text-center wow bounceInLeft animated" style="visibility: visible; margin-bottom: 20px;">
                <h3 class="text-left">Want to Donate Blood</h3>
                <ul style="line-height: 165%">
                    <li>Blood Donation Camps</li>
                    <li>Appointment for Blood Bank</li>
                    <li>Donor Login</li>
                    <li style="display: none;">Voluntary Donor Group</li>
                    <li>About Blood Donation</li>
                    <li>Register VBD Camp</li>
                </ul>
                <img src="https://cdn-icons-png.flaticon.com/128/3304/3304622.png" />
            </div>
            <div class="col-md-3 col-sm-12 col-xs-12 text-center wow bounceInLeft animated" style="visibility: visible; margin-bottom: 20px;">
                <h3 class="text-left">Blood Bank Login</h3>
                <ul style="line-height: 165%">
                    <li>Login</li>
                    <li>Add your Blood Bank</li>
                </ul>
                <img src="https://cdn-icons-png.flaticon.com/128/2069/2069788.png" />
            </div>
            <div class="col-md-3 col-sm-12 col-xs-12 text-center wow bounceInLeft animated" style="visibility: visible; margin-bottom: 20px;">
                <h3 class="text-left">About Us</h3>
                <ul style="line-height: 165%">
                    <li>About website</li>
                    <li>Notifications</li>
                    <li>Gallery</li>
                    <li>Video Gallery</li>
                    <li>Contact Us</li>
                    <li>Mobile Apps</li>
                </ul>
                <img src="https://cdn-icons-png.flaticon.com/128/1056/1056501.png" />
            </div>
        </div>
        <div class="text-center" style="margin-top: 20px; text-align: center;">
            <a href="#">Terms and Conditions | Privacy Policy | Accessibility Statement</a>
            LastUpdated=@DateTime.Now.Year
        </div>
    </div>
    <div class="text-center" style="margin-top: 20px; text-align: center;">
        &copy; @DateTime.Now.Year blood bank application
    </div>
</footer>
