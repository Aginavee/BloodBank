@model Bloodbankapp.Models.Admin
@{
    ViewBag.Title = "Admin";
}

<h2 style="text-align:center">Admin</h2>
<body>
    <form style="background-image:url(/image/img.jpg);background-repeat:no-repeat;height:400px;background-size:cover;">  
        <main>
            
            <div class="mx-auto p-4 " style="width:500px;height:400px;color:aquamarine;font-size:20px;background-color: rgb(0,0,0); opacity: 0.6;">
                <div class="row justify-content-center">
                    <div class="m-2">
                    @Html.LabelFor(model => model.Email)<br /><br />
                    @Html.TextBox("Email", "", new { id = "email", placeholder = "abc@gmail.com", Class = "form-control" })<br />
                </div>
                <div class="m-2">
                @Html.LabelFor(model => model.Password)<br /><br />
                @Html.Password("Password", "", new { id = "pass", placeholder = "", Class = "form-control" })
                @*@Html.CheckBox("Remember me")<span>Remember me</span>*@
                    </div>
                <div class="m-2">
                    <a href="#!">Forgot password?</a><br />
                </div>
            </div>

            <!-- Submit button -->

            <button type="submit" class="btn btn-lg btn-primary mb-4">Sign in</button>
            </div>
        </main>
    </form>
</body>