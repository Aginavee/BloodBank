@model Bloodbankapp.Models.Bank
@{
    ViewBag.Title = "Bank";
}
@using (Html.BeginForm("Bloodavail", "Home", FormMethod.Post))
{
    <div class="page-header" style="background-color:red; text-align:center;font-size:25px">Search Nearby Blood Bank</div>
    <br />
    <style>
        .button {
            margin-left: 230px;
        }
    </style>
    <div class="mx-auto form" style="align-items:center; width:600px;color:black;margin-top:5px;font-size:20px; background-image:url( /image/img12.jpg);
background-repeat:no-repeat;height:300px;background-size:cover;border-image:auto;text-align:center;">
        <h3 style="text-align:center">BLOODBANK</h3><br />
        <div class="p-3" style="font-size:30px;">
            <label for="city" style="color:black;text-align:left;" class="form-label">City</label><br />
            @Html.DropDownList("City", new List<SelectListItem> { new SelectListItem { Text="Choose your city",Value="Choose your city"},
          new SelectListItem {Text="Erode",Value="Erode"},new SelectListItem {Text="Chennai",Value="Chennai"},new SelectListItem {Text="Tirupur",Value="Tirupur"},
       new SelectListItem {Text="Trichy",Value="Trichy"},new SelectListItem {Text="Coimbatore",Value="Coimbatore"},new SelectListItem {Text="Salem",Value="Salem"},
       new SelectListItem {Text="Theni",Value="Theni"},new SelectListItem { Text="Madurai",Value="Madurai"}})<br />
        </div>
        <button type="submit" class="button">Search</button>
    </div>
}


