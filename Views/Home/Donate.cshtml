@model bloodb.Models.Donate
@{
    ViewBag.Title = "Donate";
}
@using (Html.BeginForm())
{
    <style>
        .button {
            margin-left:470px;
        }
        body {
            background-image: url("https://media.istockphoto.com/id/1168949245/vector/red-paper-cut-background.jpg?s=612x612&w=0&k=20&c=EkOJI1Bi2lhBA-psjiXgw7GvJCEp-gcTKXzutmUvFy4=");
            background-repeat: repeat;
        }
    </style>
    
    <div style="margin-top:10px">
        <div class="row justify-content-center mx-auto" style="align-content:center; font-size: 20px; width: 700px;background-color:aliceblue;">
            <br />
            <h2>USER BLOOD DONATE FORM</h2>
            <div class="m-2">
                @Html.LabelFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name, new {  placeholder = "", Class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name, "", new { Class = "text-danger" })
            </div>
            <div class="m-2">
                @Html.LabelFor(model => model.Dob)
                @Html.TextBoxFor(model=>model.Dob, new { placeholder = "", Class = "form-control" })
                @Html.ValidationMessageFor(model => model.Dob, "", new { Class = "text-danger" })
            </div>
            <div class="m-2">
                @Html.LabelFor(model => model.Mobile)
                @Html.TextBoxFor(model=>model.Mobile, new { id = "Mobile", placeholder = "", Class = "form-control" })
                @Html.ValidationMessageFor(model => model.Mobile, "", new { Class = "text-danger" })
            </div>
            <div class="m-2">
                @Html.LabelFor(model => model.Address)
                @Html.TextBoxFor(model=>model.Address, new { id = "Address", placeholder = "enter your residential address", Class = "form-control" })
                @Html.ValidationMessageFor(model => model.Address, "", new { Class = "text-danger" })
            </div>
        </div>

        <div class="row justify-content-center mx-auto" style="align-content: center; font-size: 20px; width: 700px; height: 300px; background-color: aliceblue;">
            <div class="m-2">
                @Html.LabelFor(model => model.State)
                @Html.DropDownListFor(model => model.State, new List<SelectListItem> { new SelectListItem { Text="Choose your State",Value="Choose your State"},
               new SelectListItem { Text="TamilNade",Value="TamilNadu"}, new SelectListItem {Text="Kerala",Value="Kerala"},
               new SelectListItem {Text="Assam",Value="Assam"},new SelectListItem {Text="MadhyaPradesh",Value="MadhyaPradesh"},
               new SelectListItem {Text="Bihar",Value="Bihar"},new SelectListItem {Text="Banglore",Value="Banglore"},
               new SelectListItem {Text="Goa",Value="Goa"},new SelectListItem { Text="Pondichery",Value="Pondichery"}})
                @Html.ValidationMessageFor(model => model.State, "", new { Class = "text_danger" })
            </div>
            <div class="m-2">
                @Html.LabelFor(model => model.Gender)
                @Html.DropDownListFor(model => model.Gender, new List<SelectListItem>{ new SelectListItem { Text="Select Gender", Value = "Select Gender" },
               new SelectListItem { Text = "Male", Value = "Male" },new SelectListItem { Text="Female", Value = "Female" } })
                @Html.ValidationMessageFor(model => model.Gender, "", new { Class = "text_danger" })

            </div>
            <div class="m-2">
                @Html.LabelFor(model => model.Bloodgroup)
                @Html.DropDownListFor(model => model.Bloodgroup, new List<SelectListItem> { new SelectListItem { Text="Choose blood group",Value="Choose blood group"},
              new SelectListItem {Text="A+",Value="A+"},new SelectListItem {Text="B+",Value="B+"},new SelectListItem {Text="A-",Value="A-"},
           new SelectListItem {Text="B-",Value="B-"},new SelectListItem {Text="O+",Value="O+"},new SelectListItem {Text="AB+",Value="AB+"},
           new SelectListItem {Text="AB-",Value="AB-"},new SelectListItem { Text="O-",Value="O-"}})
                @Html.ValidationMessageFor(model => model.Bloodgroup, "", new { Class = "text_danger" })

            </div>
            <div class="m-2">
                @Html.LabelFor(model => model.Lastdate)
                @Html.TextBoxFor(model => model.Lastdate, new { id = "Lastdate", placeholder = "last donate date", Class = "form-control" })
                @Html.ValidationMessageFor(model => model.Lastdate, "", new { Class = "text_danger" })

            </div>
            <div class="button">
                <button type="submit" class="btn btn-lg btn-primary">Submit</button>
            </div>
        </div>

    </div>
 }


